<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMeuQuiz.Views.ConfirmarView" BackgroundImage="{Binding Path=Imagem}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="End" Margin="100">
            <Label Text="Jogar Novamente" Font="25">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding JogarNovamente}"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>